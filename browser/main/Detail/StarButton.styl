.root
  position relative
  padding 0
  &:hover
    .icon
      transform rotate(-72deg)
    .tooltip
      opacity 1

.root--active
  @extend .root
  color $ui-favorite-star-button-color
  &:hover
    color $ui-favorite-star-button-color
  .icon
    transform rotate(-72deg)

.icon
  transition transform 0.15s
