.root
  absolute top left bottom right

.body
  absolute right top bottom
  left $sideNav-width

.body--expanded
  @extend .body
  left $sideNav--folded-width

.slider
  absolute top bottom
  width 0

.slider--active
  @extend .slider

.slider-hitbox
  absolute top bottom left right
  width 7px
  left -3px
  z-index 10
  cursor col-resize


body[data-theme="dark"]
  .root
    absolute top left bottom right
